@import url("./main.css");
@import "../includes/varandfunctions.styl"

body
	background #f8f8f8


#intencionsiembra
	menu_selected()
	
hr
	background #dfdfdf
	

//tabla de intenciones registradas
#listadoIntencion
	.table-responsive
		h2
			color #aaa
			font-size 25px
			font-weight 600
			text-transform capitalize
			
#newIntencionBox
	background #fff
	left 0
	height 100%
	overflow-y auto
	position fixed
	top 110%
	transition .2s all
	width 100%
	z-index 2000
	
	#headerNewIntencion
		background color2
		padding 10px
	
		#boxButtonAtras
			button#atras
				background: #0003;
				border: 0;
				border-radius: 50px;
				color: #fff;
				cursor pointer
				font-size: 15px;
				font-weight 500
				outline none
				padding 5px 12px
				&:hover
					background #fff
					color color2
		h5
			color #fff
			font-size 16px
			font-weight 500

	form#fintencion
		height calc(100% - 66px)
		overflow-y auto
		padding 10px
		
		#btnFinalizarBox
			bottom 10px
			margin-top 10px
			position absolute
			right 10px
			

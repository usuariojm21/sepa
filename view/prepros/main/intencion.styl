@media(min-width 576px)
	#newIntencionBox
		background #fff
		left 0
		height 100%
		position fixed
		top 110%
		transition .2s all
		width 100%
		z-index 2000
		
		#headerNewIntencion
			background #fff
			padding 0
			position relative

			#boxButtonAtras
				position absolute
				right 0
				
				button#atras
					border: 2px solid transparent;
					transition .5s all
					&:hover
						background #fff
						border 2px solid color2
						color color2
			h5
				color color3
				font-size 30px
				font-weight bold
		form#fintencion
			height auto
			overflow-y initial
			padding 0
			
			#btnFinalizarBox
				position static
				

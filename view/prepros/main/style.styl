@import url("./main.css");
@import "../includes/varandfunctions.styl"

body
	background linear-gradient(to right bottom, rgba(0,84,209,.9) 0%, rgba(114,63,181,.9) 100%), url(../img/fondo.jpg) no-repeat
	background-position 0 0
	background-repeat no-repeat
	background-size cover
	background-attachment fixed

section
	text-align center
	.logo
		//border 3px solid #fff
		display inline-block
		margin-bottom 10px
		max-width 180px
		overflow hidden
		//padding 8px 20px
		text-align center
		width auto
		
		a
			display block
			outline none
			img
				width 100%

		/*h1
			color #fff
			font-size 45px
			font-weight bold
			margin 0*/
	.title
		color #fff
		font-size 20px
		font-weight 300
		margin-top 5px
		margin-bottom 10px
		span
			font-weight 500
	#entrar
		background transparent
		border 2px solid #fff
		border-radius 50px
		color #fff
		cursor: pointer
		font-size 16px Vrh5bazF6v
		font-weight 500
		padding 10px 20px
		text-transform uppercase
		transition(.5s, all)
		&:hover
			background #fff
			color #000
	h1
		color #fff
		font-size 100px
		margin-bottom 20px
		font-weight: 800
		text-align: center
	.col
		text-align center
	.logotipo
		display: inline-block
		max-width 200px
		img
			width 100%
		
#login
	.form-content
		//background rgba(11, 33, 68, .3)
		box-sizing border-box
		border-radius 5px
		max-width 320px
		overflow hidden
		-moz-overflow hidden
		-o-overflow hidden
		-webkit-overflow hidden
		-ms-overflow hidden
		padding 15px
		
		h3
			color #fff
			display none
			font-size 20px
			font-weight 500
			margin-bottom 10px
			text-align center
		
		form		
			input,select
				border 0
				box-shadow 1px 2px 2px rgba(0,0,0,.3)
				font-size 14px
				margin 3px 0
				padding 8px
				text-transform initial !important
				width 100%
			
			/*#btnlogin
				background color2
				border-radius 5px
				&:hover
					background color3
					color #fff*/
	.btnreg
		color #fff
		display block
		font-size 13px
		margin 0
		text-align center
		width 100%
		a
			color #2fc797
.alert
	display none
	font-size 14px
	margin-top 5px
	padding 5px
	text-align center
	width 100%
